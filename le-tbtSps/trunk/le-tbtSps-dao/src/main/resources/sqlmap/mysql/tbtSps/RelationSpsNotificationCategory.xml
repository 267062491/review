<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.letv.tbtSps.dao.impl.RelationSpsNotificationCategoryDaoImpl">
    <resultMap id="RelationSpsNotificationCategoryMap" type="RelationSpsNotificationCategory">
		<result column="id" property="id" jdbcType="DECIMAL" />
		<result column="notification_category_code" property="notificationCategoryCode" jdbcType="VARCHAR" />
		<result column="sps_code" property="spsCode" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
		<result column="create_user" property="createUser" jdbcType="VARCHAR" />
		<result column="update_user" property="updateUser" jdbcType="VARCHAR" />
		<result column="yn" property="yn" jdbcType="DECIMAL" />
    </resultMap>
    
    <sql id="relationSpsNotificationCategoryColumns">
    	id,notification_category_code,sps_code,create_time,update_time,create_user,update_user,yn
    </sql>
    
     <sql id="relationSpsNotificationCategoryUsedColumns">
    	notification_category_code,sps_code,create_time,update_time,create_user,update_user,yn
    </sql>

    <!-- 创建信息 -->
    <insert id="insert" parameterType="RelationSpsNotificationCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_relation_sps_notification_category(<include refid="relationSpsNotificationCategoryUsedColumns"/>) 
        VALUES (#{notificationCategoryCode},#{spsCode},#{createTime},#{updateTime},#{createUser},#{updateUser},1)
	</insert>
	
    <!-- 修改信息 -->
    <update id="update" parameterType="RelationSpsNotificationCategory">
        <if test="_parameter != null">
            <if test="id != null and id > 0">
                update t_relation_sps_notification_category set
		        <if test="notificationCategoryCode != null and notificationCategoryCode != ''">
                	notification_category_code = #{notificationCategoryCode,jdbcType=VARCHAR},
		        </if>
		        <if test="spsCode != null and spsCode != ''">
                	sps_code = #{spsCode,jdbcType=VARCHAR},
		        </if>
		        <if test="updateUser != null and updateUser != ''">
                	update_user = #{updateUser,jdbcType=VARCHAR},
		        </if>
                	update_time = now()
                where id = #{id}
            </if>
        </if>
    </update>

    <!-- 根据主键获取对象信息 -->
    <select id="getRelationSpsNotificationCategoryById" resultMap="RelationSpsNotificationCategoryMap" parameterType="java.lang.Long">
        <if test="_parameter != null">
            select <include refid="relationSpsNotificationCategoryColumns"/> from t_relation_sps_notification_category
            where id = #{_parameter} and yn = 1
        </if>
    </select>

    <!-- 根据查询Bean获取数据集合，不带翻页 -->
    <select id="queryRelationSpsNotificationCategoryList" resultMap="RelationSpsNotificationCategoryMap"
            parameterType="com.letv.tbtSps.domain.query.RelationSpsNotificationCategoryQuery">
        select <include refid="relationSpsNotificationCategoryColumns"/> from t_relation_sps_notification_category where <include refid="queryRelationSpsNotificationCategoryListWhere"/>
    </select>

    <!-- 根据查询Bean获取数据集合，翻页 -->
    <select id="queryRelationSpsNotificationCategoryListWithPage" resultMap="RelationSpsNotificationCategoryMap"
            parameterType="com.letv.tbtSps.domain.query.RelationSpsNotificationCategoryQuery">
        select <include refid="relationSpsNotificationCategoryColumns"/> from t_relation_sps_notification_category where <include refid="queryRelationSpsNotificationCategoryListWhere"/>
        order by create_time desc 
        limit #{startIndex},#{pageSize}
    </select>

    <!-- 根据查询Bean查询-判断是否存在 -->
    <select id="exist" resultType="java.lang.Integer" parameterType="RelationSpsNotificationCategory">
        select count(1) from t_relation_sps_notification_category where yn = 1 and group_name = #{groupName,jdbcType=VARCHAR}
    </select>

    <!-- 根据查询Bean获取集合总数 -->
    <select id="queryRelationSpsNotificationCategoryCount" resultType="java.lang.Integer"
            parameterType="com.letv.tbtSps.domain.query.RelationSpsNotificationCategoryQuery">
        select count(1) from t_relation_sps_notification_category where <include refid="queryRelationSpsNotificationCategoryListWhere"/>
    </select>

    <!-- 删除信息-逻辑删除 -->
    <update id="delete" parameterType="RelationSpsNotificationCategory">
		update t_relation_sps_notification_category 
		set yn = 0, update_time = now(), update_user = #{updateUser,jdbcType=VARCHAR}
		where id = #{id}
    </update>

    <!-- 常用的查询Where条件 -->
    <sql id="queryRelationSpsNotificationCategoryListWhere">
    	yn = 1
        <if test="id != null and id != ''">
        	and id = #{id,jdbcType=DECIMAL}
        </if>
        <if test="notificationCategoryCode != null and notificationCategoryCode != ''">
        	and notification_category_code = #{notificationCategoryCode,jdbcType=VARCHAR}
        </if>
        <if test="spsCode != null and spsCode != ''">
        	and sps_code = #{spsCode,jdbcType=VARCHAR}
        </if>
        <if test="createTime != null and createTime != ''">
        	and create_time = #{createTime,jdbcType=TIMESTAMP}
        </if>
        <if test="updateTime != null and updateTime != ''">
        	and update_time = #{updateTime,jdbcType=TIMESTAMP}
        </if>
        <if test="createUser != null and createUser != ''">
        	and create_user = #{createUser,jdbcType=VARCHAR}
        </if>
        <if test="updateUser != null and updateUser != ''">
        	and update_user = #{updateUser,jdbcType=VARCHAR}
        </if>
    </sql>
</mapper>