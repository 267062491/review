<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.letv.tbtSps.dao.impl.SpsLogAttrDaoImpl">
    <resultMap id="SpsLogAttrMap" type="SpsLogAttr">
		<result column="id" property="id" jdbcType="DECIMAL" />
		<result column="sps_code" property="spsCode" jdbcType="VARCHAR" />
		<result column="file_name" property="fileName" jdbcType="VARCHAR" />
		<result column="file_path" property="filePath" jdbcType="VARCHAR" />
		<result column="file_alias_name" property="fileAliasName" jdbcType="VARCHAR" />
		<result column="log_attr_relation" property="logAttrRelation" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
		<result column="create_user" property="createUser" jdbcType="VARCHAR" />
		<result column="update_user" property="updateUser" jdbcType="VARCHAR" />
		<result column="yn" property="yn" jdbcType="DECIMAL" />
    </resultMap>
    
    <sql id="spsLogAttrColumns">
    	id,sps_code,file_name,file_path,file_alias_name,log_attr_relation,create_time,update_time,create_user,update_user,yn
    </sql>
    
     <sql id="spsLogAttrUsedColumns">
    	sps_code,file_name,file_path,file_alias_name,log_attr_relation,create_time,update_time,create_user,update_user,yn
    </sql>

    <!-- 创建信息 -->
    <insert id="insert" parameterType="SpsLogAttr" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_sps_log_attr(<include refid="spsLogAttrUsedColumns"/>) 
        VALUES (#{spsCode},#{fileName},#{filePath},#{fileAliasName},#{logAttrRelation},#{createTime},#{updateTime},#{createUser},#{updateUser},1)
	</insert>
	
    <!-- 修改信息 -->
    <update id="update" parameterType="SpsLogAttr">
        <if test="_parameter != null">
            <if test="id != null and id > 0">
                update t_sps_log_attr set
		        <if test="spsCode != null and spsCode != ''">
                	sps_code = #{spsCode,jdbcType=VARCHAR},
		        </if>
		        <if test="fileName != null and fileName != ''">
                	file_name = #{fileName,jdbcType=VARCHAR},
		        </if>
		        <if test="filePath != null and filePath != ''">
                	file_path = #{filePath,jdbcType=VARCHAR},
		        </if>
		        <if test="fileAliasName != null and fileAliasName != ''">
                	file_alias_name = #{fileAliasName,jdbcType=VARCHAR},
		        </if>
		        <if test="logAttrRelation != null and logAttrRelation != ''">
                	log_attr_relation = #{logAttrRelation,jdbcType=VARCHAR},
		        </if>
		        <if test="updateUser != null and updateUser != ''">
                	update_user = #{updateUser,jdbcType=VARCHAR},
		        </if>
                	update_time = now()
                where id = #{id}
            </if>
        </if>
    </update>

    <!-- 根据主键获取对象信息 -->
    <select id="getSpsLogAttrById" resultMap="SpsLogAttrMap" parameterType="java.lang.Long">
        <if test="_parameter != null">
            select <include refid="spsLogAttrColumns"/> from t_sps_log_attr
            where id = #{_parameter} and yn = 1
        </if>
    </select>

    <!-- 根据查询Bean获取数据集合，不带翻页 -->
    <select id="querySpsLogAttrList" resultMap="SpsLogAttrMap"
            parameterType="com.letv.tbtSps.domain.query.SpsLogAttrQuery">
        select <include refid="spsLogAttrColumns"/> from t_sps_log_attr where <include refid="querySpsLogAttrListWhere"/>
    </select>

    <!-- 根据查询Bean获取数据集合，翻页 -->
    <select id="querySpsLogAttrListWithPage" resultMap="SpsLogAttrMap"
            parameterType="com.letv.tbtSps.domain.query.SpsLogAttrQuery">
        select <include refid="spsLogAttrColumns"/> from t_sps_log_attr where <include refid="querySpsLogAttrListWhere"/>
        order by create_time desc 
        limit #{startIndex},#{pageSize}
    </select>

    <!-- 根据查询Bean查询-判断是否存在 -->
    <select id="exist" resultType="java.lang.Integer" parameterType="SpsLogAttr">
--         select count(1) from t_sps_log_attr where yn = 1 and group_name = #{groupName,jdbcType=VARCHAR}
    </select>

    <!-- 根据查询Bean获取集合总数 -->
    <select id="querySpsLogAttrCount" resultType="java.lang.Integer"
            parameterType="com.letv.tbtSps.domain.query.SpsLogAttrQuery">
        select count(1) from t_sps_log_attr where <include refid="querySpsLogAttrListWhere"/>
    </select>

    <!-- 删除信息-逻辑删除 -->
    <update id="delete" parameterType="SpsLogAttr">
		update t_sps_log_attr 
		set yn = 0, update_time = now(), update_user = #{updateUser,jdbcType=VARCHAR}
		where id = #{id}
    </update>

    <!-- 常用的查询Where条件 -->
    <sql id="querySpsLogAttrListWhere">
    	yn = 1
        <if test="id != null and id != ''">
        	and id = #{id,jdbcType=DECIMAL}
        </if>
        <if test="spsCode != null and spsCode != ''">
        	and sps_code = #{spsCode,jdbcType=VARCHAR}
        </if>
        <if test="fileName != null and fileName != ''">
        	and file_name = #{fileName,jdbcType=VARCHAR}
        </if>
        <if test="filePath != null and filePath != ''">
        	and file_path = #{filePath,jdbcType=VARCHAR}
        </if>
        <if test="fileAliasName != null and fileAliasName != ''">
        	and file_alias_name = #{fileAliasName,jdbcType=VARCHAR}
        </if>
        <if test="logAttrRelation != null and logAttrRelation != ''">
        	and log_attr_relation = #{logAttrRelation,jdbcType=VARCHAR}
        </if>
        <if test="createTime != null and createTime != ''">
        	and create_time = #{createTime,jdbcType=TIMESTAMP}
        </if>
        <if test="updateTime != null and updateTime != ''">
        	and update_time = #{updateTime,jdbcType=TIMESTAMP}
        </if>
        <if test="createUser != null and createUser != ''">
        	and create_user = #{createUser,jdbcType=VARCHAR}
        </if>
        <if test="updateUser != null and updateUser != ''">
        	and update_user = #{updateUser,jdbcType=VARCHAR}
        </if>
    </sql>
</mapper>